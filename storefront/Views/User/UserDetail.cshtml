@model storefront.Models.UserViewModel
@{
    ViewBag.Title = "User Detail";
}

<h2>@Model.FullName</h2>

<div class="row">
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.UserLastName)
        <br />@Html.DisplayFor(m => m.UserLastName)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.UserFirstName)
        <br />@Html.DisplayFor(m => m.UserFirstName)
    </div>
    <div class="col-sm-12">
        @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>