@model storefront.Models.UserListViewModel
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Users.Count; i++)
        {
            <tr>
                <td>@Model.Users[i].UserFullName</td>
                <td>@Html.ActionLink("Detail", "UserDetail", new { id = Model.Users[i].UserId })</td>
            </tr>
        }
    </tbody>
</table>

Total Users: @Model.TotalUsers
